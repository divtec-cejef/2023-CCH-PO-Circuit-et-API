{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client"
    ],
    "module": "ES2022",
    "target": "ES2017"
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
